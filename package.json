{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for TypeScript language",
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser": "dist/bundle.js",
  "types": "dist/bundle.d.ts",
  "scripts": {
    "build": "NODE_ENV=production node_modules/webpack/bin/webpack.js --config webpack.config.js --progress --profile --bail",
    "build:dev": "node_modules/webpack-dev-server/bin/webpack-dev-server.js --config webpack.config.js --inline --progress --port 8080",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --type-check --format stylish",
    "test": "jest --coverage --no-cache --config jest.config.json",
    "test:watch": "jest --watch --updateSnapshot --config jest.config.json",
    "prepare": "npm run build",
    "prebuild": "npm run clean",
    "postbuild": "rimraf dist/**/__tests__",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilyaztsv/typescript-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "boilerplate",
    "library"
  ],
  "author": "Ilya Zaytsev (@ilyaztsv)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilyaztsv/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/ilyaztsv/typescript-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "css-loader": "^0.28.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.0",
    "jest-cli": "^20.0.0",
    "jest-environment-node-debug": "^2.0.0",
    "node-sass": "^4.5.2",
    "optimize-css-assets-webpack-plugin": "^1.3.1",
    "resolve-url-loader": "^2.0.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.17.0",
    "ts-jest": "^20.0.2",
    "ts-loader": "^2.0.3",
    "tslint": "^5.1.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1",
    "webpack-chunk-hash": "^0.4.0",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "@types/node": "^7.0.15",
    "axios": "^0.16.1",
    "mustache": "^2.3.0",
    "spectre.css": "^0.2.14",
    "tslib": "^1.6.1"
  }
}
