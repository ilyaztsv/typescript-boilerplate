{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "lib": ["es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
